# Database Configuration
DB_HOST=localhost               # MySQL host
DB_PORT=3306                    # MySQL port
DB_USER=root                    # MySQL username
DB_PASSWORD=your_password       # MySQL password
DB_NAME=bookstore              # Database name

# JWT Configuration
JWT_SECRET=your_secret_key_min_32_characters        # Access token secret
JWT_EXPIRES_IN=15m                                   # Access token expiry
REFRESH_TOKEN_SECRET=your_refresh_secret_min_32     # Refresh token secret
REFRESH_TOKEN_EXPIRES_IN=7d                          # Refresh token expiry

# Server Configuration
PORT=3000                       # Server port
NODE_ENV=development           # Environment (development/production)

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Firebase
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here_if_needed